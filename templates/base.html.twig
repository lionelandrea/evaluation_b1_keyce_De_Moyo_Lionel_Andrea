<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}AllGames{% endblock %}</title>

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>

<body class="min-h-screen text-white flex flex-col bg-[#0b1220]">

<header class="bg-[#070b13]/80 border-b border-white/10 backdrop-blur">
    <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">

         <a href="{{ path('app_home') }}" class="flex items-center gap-3">
            <img src="{{ asset('images/logo-allgames.svg') }}"
                 alt="AllGames"
                 class="h-10 w-auto">
            <span class="text-lg font-semibold tracking-wide">AllGames</span>
        </a>

        <nav class="hidden md:flex items-center gap-6 text-sm text-white/70">
            <a class="hover:text-white" href="{{ path('app_home') }}">Home</a>
            <a class="hover:text-white" href="{{ path('app_game_list') }}">Games</a>
            <a class="hover:text-white" href="{{ path('app_about') }}">About</a>

            {% if app.user %}
                <a class="hover:text-white" href="{{ path('app_wishlist') }}">Wishlist</a>
            {% endif %}
        </nav>

        <div class="flex items-center gap-3">

            <form method="get"
                  action="{{ path('app_game_list') }}"
                  class="hidden sm:flex items-center gap-2">

                <input
                    type="text"
                    name="q"
                    value="{{ app.request.query.get('q') }}"
                    placeholder="Search"
                    class="h-9 w-52 rounded bg-white/5 border border-white/10 px-3 text-sm outline-none focus:border-blue-500"
                >

                <button
                    type="submit"
                    class="h-9 px-4 rounded bg-blue-600 hover:bg-blue-700 text-sm">
                    OK
                </button>
            </form>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}"
                   class="px-3 py-2 rounded bg-white/10 hover:bg-white/20 text-sm">
                    Admin
                </a>
            {% endif %}

            {% if app.user %}
                <a href="{{ path('app_logout') }}"
                   class="px-3 py-2 rounded bg-white/10 hover:bg-white/20 text-sm">
                    Logout
                </a>
            {% else %}
                <a href="{{ path('app_login') }}"
                   class="px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 text-sm">
                    Login
                </a>
            {% endif %}

        </div>
    </div>
</header>

<main class="flex-1">
    {% block body %}{% endblock %}
</main>

<footer class="border-t border-white/10 bg-[#070b13]">
    <div class="max-w-6xl mx-auto px-4 py-6 flex items-center justify-between text-xs text-white/50">

        <div class="flex items-center gap-2">
            <img src="{{ asset('images/logo-allgames.svg') }}"
                 class="h-6 w-auto"
                 alt="AllGames">
            <span>Â© {{ "now"|date("Y") }} AllGames</span>
        </div>

        <div class="flex gap-4">
            <a class="hover:text-white" href="#">Facebook</a>
            <a class="hover:text-white" href="#">Twitter</a>
            <a class="hover:text-white" href="#">LinkedIn</a>
        </div>

    </div>
</footer>

</body>
</html>