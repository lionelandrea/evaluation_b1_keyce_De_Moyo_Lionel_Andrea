{% extends 'base.html.twig' %}

{% block title %}About - AllGames{% endblock %}

{% block body %}

<section class="flex-1 py-20 text-center">
  <div class="max-w-4xl mx-auto px-6">

    <img src="/logo-allgames.svg" alt="AllGames" class="h-36 mx-auto">

    <h1 class="mt-10 text-3xl md:text-4xl font-semibold">
      About AllGames
    </h1>

    <p class="mt-6 text-white/60 text-base md:text-lg leading-relaxed">
