{% extends 'base.html.twig' %}
{% block title %}Home - AllGames{% endblock %}

{% block body %}
<section class="bg-gradient-to-b from-[#0b1220] via-[#0a1020] to-[#070b13]">
  <div class="max-w-6xl mx-auto px-4 pt-14 pb-10">

    <div class="grid lg:grid-cols-2 gap-10 items-center">
      <div>
        <h1 class="text-3xl md:text-4xl font-extrabold leading-tight">
          Wishlist all your favorite games
        </h1>

        <p class="mt-4 text-white/60 max-w-xl text-sm md:text-base">
          Keep track of the games you love, stay informed about new releases,
          and never miss a deal.
        </p>

        <div class="mt-6">
          <a href="{{ path('app_game_list') }}"
             class="inline-flex items-center justify-center h-9 px-4 rounded bg-blue-500 hover:bg-blue-600 text-sm font-medium">
            View all games
          </a>
        </div>
      </div>

      <div class="flex justify-center lg:justify-end">
        <img src="{{ asset('images/logo-allgames.png') }}"
             alt="AllGames"
             class="w-[320px] md:w-[380px] drop-shadow-[0_20px_40px_rgba(0,0,0,0.6)]">
      </div>
    </div>

    <div class="mt-12 grid md:grid-cols-3 gap-6">
      {% for game in games %}
        {% include 'game/_game_item.html.twig' with { game: game } %}
      {% else %}
        <p class="text-white/60">Aucun jeu pour le moment. Ajoute des jeux dans lâ€™admin.</p>
      {% endfor %}
    </div>

  </div>
</section>
{% endblock %}