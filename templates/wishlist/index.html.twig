{% extends 'base.html.twig' %}
{% block title %}My Wishlist - AllGames{% endblock %}

{% block body %}
<section class="bg-gradient-to-b from-[#0b1220] via-[#0a1020] to-[#070b13]">
  <div class="max-w-6xl mx-auto px-4 py-10">

    <h1 class="text-2xl font-bold mb-8">My Wishlist</h1>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for game in games %}
        {% include 'game/_game_item.html.twig' with { game: game } %}
      {% else %}
        <p class="text-white/60">Ta wishlist est vide.</p>
      {% endfor %}
    </div>

  </div>
</section>
{% endblock %}